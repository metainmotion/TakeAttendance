<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TakeAttendance.RegisterStudentPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Registration Page!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="firstname" Placeholder="Enter First Name" />
            
            <Entry x:Name="lastname" Placeholder="Enter Last Name" />

            <Entry x:Name="phone" Placeholder="Enter Phone Number" Keyboard="Telephone" MaxLength="10" />

            <Button x:Name="registerStudentButton"
                    Margin="0, 40, 0, 0"
                    Text="Register Student"
                    Clicked="registerStudentButton_Clicked" />

            <Button x:Name="goBackHome"
                Margin="0, 40, 0, 0"
                Text="Go Back to Home Page"
                Clicked="goBackHome_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>