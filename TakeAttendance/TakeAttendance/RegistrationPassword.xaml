<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TakeAttendance.RegistrationPassword">

    <StackLayout VerticalOptions="Center" Margin="20">

        <Label x:Name="registerLabel" 
               Text="Enter Password (Ask JD if Needed)" 
               FontSize="Title" 
               Style="{StaticResource homeLabel}"
               FontAttributes="Bold" 
               HorizontalTextAlignment="Center" 
               />

        <Entry x:Name="registrationPassword"
               Placeholder="Password"
               Keyboard="Email" 
               Completed="registrationPassword_Completed" 
               />

        <Button x:Name="goBackToLoginButton"
                Margin="0, 40, 0, 0"
                Text="Go Back to Login Page"
                Clicked="goBackToLoginButton_Clicked" />

    </StackLayout>

</ContentPage>